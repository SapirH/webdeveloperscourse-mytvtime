@model IEnumerable<MyTvTime.Models.User>

@{
    ViewData["Title"] = "Login";

    <script type="text/javascript">
        //Show password function
        $(document).ready(function () {  
            $('#show-password').on("click", function () {
                if (this.id == 'show-password') {
                    $('#txt-password').attr('type', 'text');
                    $('#show-password-icon').removeClass('fa-eye').addClass('fa-eye-slash');
                    $(this).attr('id', 'hide-password');
                }
                else {
                    $('#txt-password').attr('type', 'password');
                    $('#show-password-icon').removeClass('fa-eye-slash').addClass('fa-eye');
                    $(this).attr('id', 'show-password');
                }
            });
        });  
    </script>
}
<link href="~/css/Login.css" rel="stylesheet" type="text/css">
<script defer src="~/lib/fontawesome-free-5.15.1-web/js/all.js"></script> <!--load all styles -->

<div class="container-login100">
    <div class="wrap-login100 p-t-90 p-b-30">
        <form asp-controller="Auth" asp-action="Login" class="login100-form validate-form">
            <span class="login100-form-title p-b-40">
                Login
            </span>
            <div class="form-inputs-container">
                <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email: ex@abc.xyz">
                    <input class="input100" type="text" name="username" placeholder="Username">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-20" data-validate="Please enter password">
                    <span id="show-password" class="btn-show-pass">
                        <i id="show-password-icon" class="fas fa-eye"></i>
                    </span>
                    <input class="input100" type="password" id="txt-password" name="password" placeholder="Password">
                    <span class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn">
                    <input class="login100-form-btn" type="submit" value="Login" />
                </div>
            </div>
            <div class="external-login">
                <a  class="btn-login-with bg1 m-b-10" style="color:white" onclick="alert('To be continue')">
                    <i class="fab fa-facebook"></i>
                    <span class="btn-label">Login with Facebook</span>
                </a>
                <a class="btn-login-with bg2" style="color:white" onclick="alert('To be continue')">
                    <i class="fab fa-twitter"></i>
                    <span class="btn-label">Login with Twitter</span>
                </a>
            </div>
        </form>
        <br />
        <div>
            <div class="go-to">
                <span class="txt2 p-b-10">
                    Don’t have an account?
                </span>

                <a asp-controller="Auth" asp-action="Create" class="bo1 hov1">
                    Sign up now
                </a>
            </div>
            <div class="go-to">
                <span class="txt2 p-b-10">
                    Forgot password?
                </span>

                <a asp-controller="Auth" asp-action="ResetPassword" class="bo1 hov1">
                    Reset password now
                </a>
            </div>
        </div>
    </div>
</div>

