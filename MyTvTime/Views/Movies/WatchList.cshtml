
@{
	ViewData["Title"] = "WatchList";
}

<h1>WatchList</h1>

@if (Model.Count ==0)
{
<div style="
    width: 100%;
    height: 100%;
    text-align: center;
">
	<p style="margin-top: 15%;font-weight: bold;">- Add your first movie -</p>
</div>
}
else
{

		@foreach (var item in Model)
		{

			<div style="display: inline-block;
margin-right: 2%;
margin-top: 2%;">
				<img src="@item.Movie.ImageURL" style="width: 10vw; height: 30vh" ;" />

				<div style="width: 10vw;font-weight: bold;text-align: center;">
					<a asp-action="Details" asp-route-id="@item.Movie.ID" style="color: black"> @item.Movie.Name </a>
				</div>
			</div>
		}
}